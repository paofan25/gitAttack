<Window x:Class="gitAttack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gitAttack"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        xmlns:viewModels="clr-namespace:gitAttack.ViewModels"
        mc:Ignorable="d"
        Title="Unity场景冲突解决器"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="HeaderTextStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="Margin"
                    Value="0,8,0,4"/>
        </Style>

        <Style x:Key="ButtonStyle"
               TargetType="Button">
            <Setter Property="Padding"
                    Value="10,5"/>
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="MinWidth"
                    Value="100"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 工具栏 -->
            <RowDefinition Height="*"/>
            <!-- 主区域 -->
            <RowDefinition Height="Auto"/>
            <!-- 状态栏 -->
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <Grid Grid.Row="0"
                Margin="10,10,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 第一行：仓库操作 -->
            <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0,0,0,10">
                <Button Command="{Binding OpenRepositoryCommand}"
                        Style="{StaticResource ButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <fa5:SvgAwesome Icon="Solid_FolderOpen"
                                        Height="16"
                                        Width="16"
                                        Margin="0,0,5,0"/>
                        <TextBlock Text="选择仓库"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding InitializeRepositoryCommand}"
                        Style="{StaticResource ButtonStyle}"
                        Margin="5,5,0,5"
                        Visibility="{Binding IsValidRepository, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <fa5:SvgAwesome Icon="Solid_Plus"
                                        Height="16"
                                        Width="16"
                                        Margin="0,0,5,0"/>
                        <TextBlock Text="初始化仓库"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding RefreshConflictsCommand}"
                        Style="{StaticResource ButtonStyle}"
                        Margin="5,5,15,5"
                        Visibility="{Binding IsValidRepository, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <fa5:SvgAwesome Icon="Solid_Sync"
                                        Height="16"
                                        Width="16"
                                        Margin="0,0,5,0"/>
                        <TextBlock Text="刷新冲突"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- 第二行：API参数输入区域 -->
            <WrapPanel Grid.Row="1"
                    Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal"
                        Margin="0,0,10,0">
                    <TextBlock Text="API密钥:"
                            VerticalAlignment="Center"/>
                    <PasswordBox x:Name="ApiKeyBox"
                            Width="200"
                            Margin="5,0"
                            VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                        Margin="0,0,10,0">
                    <TextBlock Text="API URL:"
                            VerticalAlignment="Center"/>
                    <ComboBox x:Name="ApiUrlComboBox"
                              Width="220"
                              Margin="5,0"
                              VerticalAlignment="Center"
                              ItemsSource="{Binding ApiSettings.EndpointHistories}"
                              SelectedItem="{Binding SelectedEndpointHistory}"
                              IsEditable="True"
                              Text="{Binding ApiEndpoint, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Name}"
                                            Grid.Column="0"/>
                                    <Button Grid.Column="1"
                                            Content="X"
                                            Width="20"
                                            Height="20"
                                            Padding="0"
                                            Command="{Binding DataContext.RemoveEndpointCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="模型:"
                            VerticalAlignment="Center"/>
                    <ComboBox x:Name="ModelComboBox"
                              Width="150"
                              Margin="5,0"
                              VerticalAlignment="Center"
                              ItemsSource="{Binding ApiSettings.ModelHistories}"
                              SelectedItem="{Binding SelectedModelHistory}"
                              IsEditable="True"
                              Text="{Binding SelectedModel, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Name}"
                                            Grid.Column="0"/>
                                    <Button Grid.Column="1"
                                            Content="X"
                                            Width="20"
                                            Height="20"
                                            Padding="0"
                                            Command="{Binding DataContext.RemoveModelCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </WrapPanel>

            <!-- 仓库信息 -->
            <Border Grid.Row="2"
                    Padding="10,5"
                    Background="#F0F0F0"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="当前仓库："
                               FontWeight="SemiBold"/>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal">
                        <fa5:SvgAwesome Icon="Solid_Check"
                                        Foreground="Green"
                                        Height="14"
                                        Width="14"
                                        Margin="0,0,5,0"
                                        Visibility="{Binding IsValidRepository, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <fa5:SvgAwesome Icon="Solid_ExclamationCircle"
                                        Foreground="Red"
                                        Height="14"
                                        Width="14"
                                        Margin="0,0,5,0"
                                        Visibility="{Binding IsValidRepository, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding RepositoryName}"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text=" (非Git仓库)"
                                   Foreground="Red"
                                   Margin="5,0,0,0"
                                   Visibility="{Binding IsValidRepository, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- 主区域 -->
        <Grid Grid.Row="1"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <!-- 左侧冲突文件列表 -->
                <ColumnDefinition Width="*"/>
                <!-- 右侧冲突详情 -->
            </Grid.ColumnDefinitions>

            <!-- 左侧冲突文件列表 -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="冲突文件"
                           Style="{StaticResource HeaderTextStyle}"/>

                <ListView Grid.Row="1"
                          ItemsSource="{Binding Conflicts}"
                          SelectedItem="{Binding SelectedConflict}"
                          BorderThickness="1"
                          BorderBrush="#DDDDDD"
                          Margin="0,5,10,0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <fa5:SvgAwesome Icon="Solid_FileAlt"
                                                Height="16"
                                                Width="16"
                                                Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding FileName}"/>
                                <TextBlock Text=" （已解决）"
                                           Foreground="Green"
                                           Visibility="{Binding IsResolved, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- 右侧冲突详情 -->
            <Grid Grid.Column="1"
                  Visibility="{Binding IsConflictSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 标题 -->
                    <RowDefinition Height="200"/>
                    <!-- 冲突区域列表 -->
                    <RowDefinition Height="*"/>
                    <!-- 冲突内容详情 -->
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{Binding SelectedConflict.FileName, StringFormat='文件：{0}'}"
                           Style="{StaticResource HeaderTextStyle}"/>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="冲突区域"
                               Style="{StaticResource HeaderTextStyle}"
                               Margin="0,0,0,5"/>

                    <ListView Grid.Row="1"
                              ItemsSource="{Binding SelectedConflict.ConflictSections}"
                              SelectedItem="{Binding SelectedConflictSection}"
                              BorderThickness="1"
                              BorderBrush="#DDDDDD"
                              Margin="0,0,0,10">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <fa5:SvgAwesome Icon="Solid_ExclamationTriangle"
                                                    Height="16"
                                                    Width="16"
                                                    Margin="0,0,5,0"
                                                    Foreground="{Binding IsResolved, Converter={StaticResource ConflictStatusConverter}}"/>
                                    <TextBlock Text="{Binding StartLineNumber, StringFormat='冲突 #{0}'}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text=" （已解决）"
                                               Foreground="Green"
                                               Visibility="{Binding IsResolved, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>

                <Grid Grid.Row="2"
                      Visibility="{Binding IsConflictSectionSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <!-- 冲突内容 -->
                        <RowDefinition Height="Auto"/>
                        <!-- 操作按钮 -->
                    </Grid.RowDefinitions>

                    <TabControl Grid.Row="0">
                        <TabItem Header="对比视图">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Text="我们的版本（HEAD）"
                                               FontWeight="SemiBold"
                                               Margin="0,5"/>
                                    <TextBox Grid.Row="1"
                                             Text="{Binding SelectedConflictSection.OurContent}"
                                             IsReadOnly="True"
                                             TextWrapping="Wrap"
                                             VerticalScrollBarVisibility="Auto"
                                             FontFamily="Consolas"
                                             FontSize="12"/>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Text="他们的版本"
                                               FontWeight="SemiBold"
                                               Margin="0,5"/>
                                    <TextBox Grid.Row="1"
                                             Text="{Binding SelectedConflictSection.TheirContent}"
                                             IsReadOnly="True"
                                             TextWrapping="Wrap"
                                             VerticalScrollBarVisibility="Auto"
                                             FontFamily="Consolas"
                                             FontSize="12"/>
                                </Grid>
                            </Grid>
                        </TabItem>

                        <TabItem Header="解决方案">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="合并后的内容"
                                           FontWeight="SemiBold"
                                           Margin="0,5"/>
                                <TextBox Grid.Row="1"
                                         Text="{Binding SelectedConflictSection.ResolvedContent, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         FontFamily="Consolas"
                                         FontSize="12"/>
                            </Grid>
                        </TabItem>

                        <TabItem Header="AI分析">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0"
                                            Orientation="Horizontal"
                                            Margin="0,0,0,5">
                                    <TextBlock Text="AI建议"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                    <Button Command="{Binding RefreshAiSuggestionCommand}"
                                            Margin="10,0,0,0"
                                            Padding="5,2"
                                            Content="刷新AI建议"/>
                                </StackPanel>
                                <TextBox Grid.Row="1"
                                         Text="{Binding SelectedConflictSection.SuggestionFromAI}"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         FontFamily="Segoe UI"
                                         FontSize="12"/>
                            </Grid>
                        </TabItem>

                        <TabItem Header="冲突分析">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="冲突详情"
                                           FontWeight="SemiBold"
                                           Margin="0,5"/>
                                <TextBox Grid.Row="1"
                                         Text="{Binding SelectedConflictSection.Description}"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         FontFamily="Segoe UI"
                                         FontSize="12"/>
                            </Grid>
                        </TabItem>
                    </TabControl>

                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0">
                        <Button Command="{Binding UseOurVersionCommand}"
                                Style="{StaticResource ButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <fa5:SvgAwesome Icon="Solid_ArrowLeft"
                                                Height="16"
                                                Width="16"
                                                Margin="0,0,5,0"/>
                                <TextBlock Text="使用我们的版本"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding UseTheirVersionCommand}"
                                Style="{StaticResource ButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <fa5:SvgAwesome Icon="Solid_ArrowRight"
                                                Height="16"
                                                Width="16"
                                                Margin="0,0,5,0"/>
                                <TextBlock Text="使用他们的版本"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding UseAiSuggestionCommand}"
                                Style="{StaticResource ButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <fa5:SvgAwesome Icon="Solid_Robot"
                                                Height="16"
                                                Width="16"
                                                Margin="0,0,5,0"/>
                                <TextBlock Text="使用AI建议"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding SaveResolvedFileCommand}"
                                Style="{StaticResource ButtonStyle}"
                                Margin="15,5,5,5">
                            <StackPanel Orientation="Horizontal">
                                <fa5:SvgAwesome Icon="Solid_Save"
                                                Height="16"
                                                Width="16"
                                                Margin="0,0,5,0"/>
                                <TextBlock Text="保存解决方案"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <!-- 状态栏 -->
        <Grid Grid.Row="2"
              Background="#F0F0F0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Orientation="Horizontal">
                <TextBlock Text="{Binding StatusMessage}"
                           Padding="10,5"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusMessage"
                           Foreground="Blue"
                           Padding="10,5"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <ProgressBar Grid.Column="1"
                         IsIndeterminate="{Binding IsLoading}"
                         Width="100"
                         Height="15"
                         Margin="5"
                         Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>
    </Grid>
</Window>
